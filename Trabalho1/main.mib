MINHA-REDE-MIB DEFINITIONS ::= BEGIN
---- Comandos para instalar e verificar a MIB:

-- 1. Copiar o arquivo main.mib para o diretório de MIBs:
--    sudo cp main.mib /usr/share/snmp/mibs/

-- 2. Verificar a estrutura da MIB:
--    snmptranslate -m +main -Tp

-- 3. Consultar objetos da MIB em um dispositivo SNMP:
--    snmpwalk -v2c -c public -m +main <endereço_ip_do_dispositivo> objetosMinhaRede

-- Importação de Módulos Necessários
IMPORTS
    MODULE-IDENTITY, OBJECT-TYPE, Counter32, Gauge32, Integer32, IpAddress, enterprises
        FROM SNMPv2-SMI;

-- Definição do Módulo
moduloMinhaRede MODULE-IDENTITY
    LAST-UPDATED "202410300000Z"
    ORGANIZATION "Minha Empresa de Tecnologia"
    CONTACT-INFO
        "Contato: Suporte Técnico
         E-mail: suporte@gmail.com
         Telefone: +55 99 999999
    DESCRIPTION
        "MIB para monitoramento básico de dispositivos em uma rede local."
    ::= { enterprises 99999 }

-- Raiz dos Objetos na MIB
objetosMinhaRede OBJECT IDENTIFIER ::= { moduloMinhaRede 1 }

-- Objeto 1: Status do Dispositivo
statusDispositivo OBJECT-TYPE
    SYNTAX      INTEGER { ativo(1), inativo(2), manutencao(3) }
    MAX-ACCESS  read-only
    STATUS      current
    DESCRIPTION
        "Status atual do dispositivo. Valores possíveis:
         - ativo (1): Dispositivo está online.
         - inativo (2): Dispositivo está offline.
         - manutencao (3): Dispositivo em manutenção."
    ::= { objetosMinhaRede 1 }

-- Objeto 2: Contagem de Pacotes Recebidos
contagemPacotesRecebidos OBJECT-TYPE
    SYNTAX      Counter32
    MAX-ACCESS  read-only
    STATUS      current
    DESCRIPTION
        "Número de pacotes recebidos pelo dispositivo desde o último reinício."
    ::= { objetosMinhaRede 2 }

-- Objeto 3: Contagem de Pacotes Enviados
contagemPacotesEnviados OBJECT-TYPE
    SYNTAX      Counter32
    MAX-ACCESS  read-only
    STATUS      current
    DESCRIPTION
        "Número de pacotes enviados pelo dispositivo desde o último reinício."
    ::= { objetosMinhaRede 3 }

-- Objeto 4: Nome do Dispositivo
nomeDispositivo OBJECT-TYPE
    SYNTAX      OCTET STRING (SIZE (0..255))
    MAX-ACCESS  read-only
    STATUS      current
    DESCRIPTION
        "Nome de identificação do dispositivo na rede."
    ::= { objetosMinhaRede 4 }

-- Objeto 5: Endereço IP do Dispositivo
enderecoIPDispositivo OBJECT-TYPE
    SYNTAX      IpAddress
    MAX-ACCESS  read-only
    STATUS      current
    DESCRIPTION
        "Endereço IP do dispositivo."
    ::= { objetosMinhaRede 5 }

-- Objeto 6: Nível de Carga da CPU (em %)
cargaCPU OBJECT-TYPE
    SYNTAX      Gauge32
    MAX-ACCESS  read-only
    STATUS      current
    DESCRIPTION
        "Nível atual de carga da CPU do dispositivo, expresso em porcentagem."
    ::= { objetosMinhaRede 6 }

-- Objeto 7: Temperatura do Dispositivo (em °C)
temperaturaDispositivo OBJECT-TYPE
    SYNTAX      Gauge32
    MAX-ACCESS  read-only
    STATUS      current
    DESCRIPTION
        "Temperatura atual do dispositivo, medida em graus Celsius."
    ::= { objetosMinhaRede 7 }

-- Objeto 8: Tempo de Atividade do Dispositivo (em segundos)
tempoAtividadeDispositivo OBJECT-TYPE
    SYNTAX      Integer32
    MAX-ACCESS  read-only
    STATUS      current
    DESCRIPTION
        "Tempo total de atividade do dispositivo desde o último reinício, em segundos."
    ::= { objetosMinhaRede 8 }

END
